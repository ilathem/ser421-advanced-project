---
import BaseLayout from "../layouts/BaseLayout.astro";
import YoutubeEmbed from "../components/YoutubeEmbed";
---
<BaseLayout title='Writeup'>
  <h1 class='text-6xl m-10'>Writeup</h1>
  <section class='m-5 bg-slate-900 w-1/3 rounded-xl shadow-lg p-3'>
    <h2 class='text-2xl text-slate-400 mb-3'>Table of Contents</h2>
    <ul>
      <li class="text-slate-300 hover:text-slate-50 p-1"><a href="#learning_outcomes">Learning Outcomes</a></li>
      <li class="text-slate-300 hover:text-slate-50 p-1"><a href="#tutorial">Tutorial</a></li>
      <li class="text-slate-300 hover:text-slate-50 p-1"><a href="#history">History</a></li>
      <li class="text-slate-300 hover:text-slate-50 p-1"><a href="#analysis">Analysis</a></li>
      <li class="text-slate-300 hover:text-slate-50 p-1"><a href="#references">References</a></li>
    </ul>
  </section>
  <section class='m-5 bg-slate-900 w-3/4 rounded-xl shadow-lg p-3'>
    <h2 class='text-2xl text-slate-400' id="learning_outcomes">Learning Outcomes</h2>
  </section>
  <section class='m-5 bg-slate-900 w-3/4 rounded-xl shadow-lg p-3'>
    <h2 class='text-2xl text-slate-400' id="tutorial">Tutorial</h2>
    <h3 class='text-slate-400 text-xl'><a href="https://github.com/ilathem/ser421-advanced-project" target="_blank">Demo</a></h3>
    <h3 class='text-slate-400 text-xl'>Video Walkthrough</h3>
    <YoutubeEmbed client:load embedId='dQw4w9WgXcQ'/>
  </section>
  <section class='m-5 bg-slate-900 w-3/4 rounded-xl shadow-lg p-3'>
    <h2 class='text-2xl text-slate-400' id="history">History</h2>
  </section>
  <section class='m-5 bg-slate-900 w-3/4 rounded-xl shadow-lg p-3'>
    <h2 class='text-2xl text-slate-400' id="analysis">Analysis</h2>
  </section>
  <section class='m-5 bg-slate-900 w-3/4 rounded-xl shadow-lg p-3'>
    <h2 class='text-2xl text-slate-400' id="references">References</h2>
  </section>
</BaseLayout>